    <script>

    $(document).ready(function () {
        $(".clear-input").click(function () {
            // Elimina el contenido del campo anterior al boton
            $(this).prev('input').val('');
        });
    });

        $(document).ready(function () {
            $("#clearAllInputs").click(function () {
                //Limpia todos los campos de entrada con la clase clear-input
                $(".clear-input").val('');

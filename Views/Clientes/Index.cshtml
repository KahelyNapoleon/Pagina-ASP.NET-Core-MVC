@model IEnumerable<PeluqueriaAgendaServicio.web.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<hr/>

<form asp-action="Index" method="get">
    <dl class="row">                             <!--DL representa una lista de definiciones -->
        <dt class="col-sm-2">
        <label for="nombre">Nombre:</label>      <!--DT  Es el nombre de la definicion-->
        </dt>
        <dd class="col-sm-10">           <!--DL Es la definicion en si, en este caso debe ser introducida por el usuario -->
        <input type="text" id="nombre" name="nombre" value="@ViewBag.Nombre"/>
        <button type="button" class="clear-input">X</button>
        </dd>

        <dt class="col-sm-2">
        <label for="apellido">Apellido:</label>
        </dt>
        <dd class="col-sm-10">
        <input type="text" id="nombre" name="apellido" value="@ViewBag.Apellido" />
        <button type="button" class="clear-input">X</button>
        </dd>
        
        <dt class="col-sm-2">
            <label for="numeroDocumento">Numero Documento:</label>
        </dt>
        <dd class="col-sm-10">
            <input type="number" id="numeroDocumento" name="numeroDocumento" value="@ViewBag.NumeroDocumento">
            <button type="button" class="clear-input">X</button>
        </dd>
        
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <input type="submit" value="Buscar" />
            <button type="button" id="clearAllInputs" class="btn-light">Limpiar Campos</button>
        </dd>
        
   
    </dl>
</form>




